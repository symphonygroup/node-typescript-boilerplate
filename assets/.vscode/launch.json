{
  "version": "0.2.0",
  "configurations": [
    {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "Debug",
      "program": "${workspaceFolder}/src/main.ts",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
      "runtimeArgs": ["--files", "-e", "ts"],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}